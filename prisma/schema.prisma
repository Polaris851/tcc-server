generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Homework {
  id         String   @id @default(uuid())
  title      String
  created_at DateTime
  completed  Boolean

  @@map("homeworks")
}

model Event {
  id          String    @id @default(uuid())
  title       TitleEnum
  discipline  String
  dueDate     DateTime
  alertDate   DateTime?
  description String?

  @@map("events")
}

model WeekActivity {
  id          String  @id @default(uuid())
  title       String
  description String?
  time_week_activity   TimeWeekActivity[]

  @@map("week_activities")
}

model TimeWeekActivity {
  id                String  @id @default(uuid())
  dayOfWeek         DayOfWeekEnum
  startTime         DateTime @db.Time
  endTime           DateTime @db.Time
  week_activity_id  String

  weekActivity WeekActivity @relation(fields: [week_activity_id], references: [id])

  @@map("times_week_activities")
}

model Discipline {
  id         String      @id @default(uuid())
  discipline String
  field      FieldEnum
  Time_discipline   TimeDiscipline[]

  @@map("disciplines")
}

model TimeDiscipline {
  id              String  @id @default(uuid())
  dayOfWeek       DayOfWeekEnum
  startTime       DateTime @db.Time
  endTime         DateTime @db.Time
  discipline_id   String

  Discipline Discipline @relation(fields: [discipline_id], references: [id])

  @@map("times_disciplines")
}

enum FieldEnum {
  Matematica
  Naturezas
  Humanas
  Linguagens
  Tecnico
}

enum TitleEnum {
  Prova
  Seminario
  Trabalho
  Tarefa
}

enum DayOfWeekEnum {
  Segunda
  Terca
  Quarta
  Quinta
  Sexta
}